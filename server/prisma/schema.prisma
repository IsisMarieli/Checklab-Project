generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int       @id @default(autoincrement())
  cpf       String    @unique
  nome      String
  email     String    @unique
  curso     String
  turno     String
  periodo   Int
  semestre  String
  presencas Presenca[]
}

model Presenca {
  id         Int      @id @default(autoincrement())
  entrada    String   
  saida      String   
  dataHora   DateTime
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
}
