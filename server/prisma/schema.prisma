generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int        @id @default(autoincrement())
  cpf       String     @unique
  nome      String
  email     String     @unique
  curso     String
  ies       String?
  turno     String     
  periodo   Int
  semestre  String
  presencas Presenca[]
}

model Presenca {
  id         Int       @id @default(autoincrement())
  data       DateTime  // Data da presença
  entrada    DateTime  // Horário de entrada
  saida      DateTime  // Horário de saída
  usuario    Usuario   @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
}